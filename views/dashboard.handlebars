<!-- Page Container -->
<div class="w3-container w3-content" style="max-width:1400px;" id="dashboardid">    
  <!-- The Grid -->
  <div class="w3-row">
    <!-- Left Column -->
      <!-- Profile -->
      <div class="w3-card w3-round w3-white w3-hover-shadow w3-container " id="profilepc" style="width: 25%;height: 95%;position: fixed;margin-left: 5%">
         <p class="w3-left" >
         <div class="container">
         <img src= {{user.imageUrl}} class="w3-rounded" style="height:300px;width:300px;margin-top: 3%;border-radius: 5px;cursor: pointer;" alt="Avatar" id="dp">
           <div class="middle">
               <div class="upload-btn-wrapper">
                  <button class="btn1" style="border: none;width: 300px;cursor: pointer;opacity: 0.7;background-color: black;color: white;" id="updatebtn">Update</button>
                  <input type="file" id="file" />
                </div>
           </div>
          </div>
          <button class="btn1 w3-theme-d4" style="display: none;border: none;width: 300px;cursor: pointer;" id="changebtn" onclick="uploadFile()">Change</button>
        </p>
         <h4><strong>{{user.name}}</strong></h4>
         <p style="color: #365899;"><strong>@{{user.username}}</strong></p>
         <p><em>Coder Football and Anime  lover</em>
         </p>
         <hr>
         <div class="w3-block w3-left-align"><i class="fa fa-pencil fa-fw w3-margin-right "></i><strong>{{user.profession}}</strong></div>
         <div class=" w3-block w3-left-align"><i class="fa fa-home fa-fw w3-margin-right "></i><strong>{{user.city}}, {{user.country}}</strong></div>
         <div class=" w3-block w3-left-align"><i class="fa fa-birthday-cake fa-fw w3-margin-right "></i><strong>{{formatDate user.birthday}}</strong></div>
        <div  class=" w3-block w3-left-align"><i class="fa fa-users fa-fw w3-margin-right"></i><strong>Following <span style="margin-left: 3%;">{{user.following.length}}</span></strong></div>
        <div  class=" w3-block w3-left-align"><i class="fa fa-users fa-fw w3-margin-right"></i><strong>Followers <span style="margin-left: 3%;">{{user.followers.length}}</span></strong></div>
    <!-- End Left Column -->
    </div>
    
    <!-- Middle Column -->
    <div class="w3-col m4"  style="left: 30.5%; position: absolute;width:480px; " id="postsdiv">
      <div class="w3-row-padding">
        <div class="w3-col m12">
          <div class="w3-card w3-round w3-white w3-hover-shadow " style="width: 139%;">
            <div class="w3-container w3-padding">
              <p >
                   <p style="color: #a2a3a9;">what's in your mind ?</p>
                   <textarea style="width: 100%" class="w3-border w3-padding"  rows="1" cols="85" form="usrform" id="headid" placeholder="Title of the Blog" ></textarea>
                   <textarea style="width: 100%" class="w3-border w3-padding"  rows="5" cols="85" name="comment" form="usrform" id="textid" placeholder="Write your Blog"></textarea>
                   <br>
                   <button class="w3-button w3-theme-d4" style="border-radius: 20px;width:100px; " onclick="loadDoc()"><i class="fa fa-pencil" style="padding-right: 8px;"></i>post</button>
              </p>
            </div>
          </div>
        </div>
      </div>
    {{#if posts}}
          {{#each posts}}
              <div class="w3-container w3-card w3-white w3-round w3-hover-shadow  wrap" style="width: 130%;margin: 10px; margin-left: 15px">
               <div class="header" style="margin-top: 20px;width: 100%;">
                 <div style="width: 100%;">
                 <img src={{this.imageUrl}} class="w3-circle" style="height:40px;width:40px;" alt="Avatar">
                 <span  style="margin-left: 7px;font-weight: bold;"><a href="/userprofile/{{this.userid}}" style="text-decoration:none;color: #365899;">{{this.name}}</a></span>
                 <span class="w3-right" style="color: #a2a3a9;margin-right: 5%;">Created on {{formatDate this.creation}}</span>
                 </div>
                 <p style="font-size: 20px;margin-top: 2%; overflow-wrap: break-word;"><strong>{{this.title}}</strong></p>
                 <hr style="width: 100%;">
               </div>
              <p style="margin-top: 10px; overflow-wrap: break-word;">{{{this.text}}}</p>   
              <div class="footer" style="width: 100%;">
              <hr style="">
              {{#ifCond this.isliked 1}}
                    <div class="w3-button  w3-margin-bottom" style="width: 32%;border-radius: 20px;" onclick="updateLikes(`{{this._id}}`)"><i class="fa fa-thumbs-up" style="padding-right: 8px;font-size: 22px;color: blue;" id="licon{{this._id}}"></i><span style="color: #848587;"><strong>Like</strong></span> <span style="color: #848587;" id="likes{{this._id}}">{{this.likedby.length}}</span></div>
              {{else}}
                  <div class="w3-button  w3-margin-bottom" style="width: 32%;border-radius: 20px;" onclick="updateLikes(`{{this._id}}`)"><i class="fa fa-thumbs-up" style="padding-right: 8px;font-size: 22px;" id="licon{{this._id}}"></i><span style="color: #848587;"><strong>Like</strong></span> <span style="color: #848587;" id="likes{{this._id}}">{{this.likedby.length}}</span></div>
              {{/ifCond}}
              <div class="w3-button w3-margin-bottom " id="commentid" onclick="donecomment('{{this._id}}')" style="width: 32%;border-radius: 20px;"><i class="fa fa-comments-o" style="padding-right: 8px;font-size: 19px;"></i><span style="color: #848587;"><strong>Comment</strong></span> <span style="color: #848587;">{{this.comments.length}}</span></div>

              <div class="w3-button  w3-margin-bottom " style="width: 32%;border-radius: 20px;"><i class="fa fa-ellipsis-v" style="padding-right: 8px;font-size: 19px;"></i><span style="color: #848587;" id="shares"+ String({{this._id}})><strong>Options</strong></span></div>

              <div id="commentbox{{this._id}}" class="w3-hide">
              <div style="display: inline-block;">
              <img src="{{../user.imageUrl}}" class="w3-left" style="width: 40px; height: 40px;padding:2px; border-radius: 50%;">
               </div>
               <div style="display: inline-block;width: 80%;">
                <textarea class="w3-round" style="width: 100%; border: 1px solid lightgray;padding: 1%;" rows="2" placeholder="Write a comment..." id="textarea{{this._id}}"></textarea>
               </div>
                <div style="display: inline-block;">
                  <button class="w3-button w3-theme-d4" style="margin-bottom: 67%;border-radius: 20px;" onclick="addComment('{{this._id}}')">add</button>
                </div>
                <div class="showcomments">
                {{#ifCond this.comments.length 0}}
                 <p><em>No comments to show you!</em></p>
                {{else}}
                {{#each comments}}
                  <div class="w3-lightgray" style="padding: 10px;margin-bottom: 10px">
                   <div style="display: inline-block;width: 20%;">
                    <img src="{{this.imageUrl}}" class="w3-left" style="width: 25px; height: 25px;padding:2px; border-radius: 50%;">
                    <p class="" style="padding:2px;color: #365899;overflow-wrap: break-word;"><strong>{{this.name}}</strong></p>
                   </div>
                   <div style="display: inline-block;width: 70%;background-color: #e9ebee;padding: 2%;border-radius: 30px;"> 
                    <p>
                      {{{this.content}}}
                    </p>
                    </div>
                  </div>
                  {{/each}}
                {{/ifCond}}
                </div> 

              </div>
              </div>
            </div>      
          {{/each}}
    {{else}}
      <p style="margin-left: 45%;"><em>Sorry , No posts to show you.</em></p>
    {{/if}}  
    <!-- End Middle Column -->
    </div>
    
    <div style="margin-left: 79%;width: 200px;height: 200px;position: fixed;">
      <ul style=" list-style-type: none;">
        <li><a style="text-decoration: none;" href="/showfollowers">Followers</a></li>
        <li><a style="text-decoration: none;" href="/showfollowings">Following</a></li>
        <li>Edit Basic Information</li>
        <li>Edit Bio</li>
        <li>Help</li>
      </ul>
    </div>

  <!-- End Grid -->
  </div>
<!-- End Page Container -->
</div>
