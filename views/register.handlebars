<div class="w3-content w3-container w3-padding-64" id="about">
{{#if errors}}
     {{#each errors}}
     <div class="w3-container w3-section w3-red">
<span onclick="this.parentElement.style.display='none'" class="w3-closebtn">&times;</span>
  {{msg}}
</div>

     {{/each}}
{{/if}}
  <h3 class="w3-center">REGISTER HERE!</h3>
  <div class="w3-center">
  	<form method="post" action="/users/register">
  	    NAME<input type="text" name="name" style="margin-left: 140px;"><br><br>
  		  USERNAME<input type="text" name="username" style="margin-left: 100px;"><br><br>
        EMAIL<input type="text" name="email" style="margin-left: 140px;"><br><br>
        PASSWORD<input type="password" name="password1" style="margin-left: 100px;"><br><br>
        CONFIRM PASSWORD:<input type="password" name="password2" style="margin-left: 25px;"><br><br>
        <input type="submit" name="register" value="REGISTER">
  	</form>
  </div>
</div>